# Schumix2 ArchLinux install script
# made by Jackneill and Megax

pkgname=schumix
_pkgname=Schumix
pkgver="4.1.x"
_pkgverclassic="4.1.x"
pkgrel=1
_gitdir=Schumix2
_gitbranch=stable
_giturl="git://github.com/Schumix/$_gitdir.git"
pkgdesc="Schumix IRC Bot and Framework"
arch=('any')
url="git://github.com/Schumix/$_gitdir.git"
license=('GNU GPL')
groups=('')
depends=('mono>=2.10.8')
makedepends=('git')
optdepends=()
conflicts=('')

build()
{
    echo "Version: $pkgver"

    # Move to src dir
    cd "${srcdir}"

    # Clone from git server
    msg "Cloning from git server..."
    if [[ -d $_gitdir ]] ; then
      cd "$_gitdir"
      git pull origin "$_gitbranch"
      msg "Files updated"
    else
      git clone "$_giturl" "$_gitdir"
      cd "$_gitdir"

      # Uncomment if you aren't using the master branch
      git checkout -b "$_gitbranch" "origin/$_gitbranch"
    fi

    # Notify the user that the build() process is complete
    echo "$_pkgname version $pkgver is ready to be packaged!"

    # SubModule
    git submodule update --init --recursive

    sdir=`ls -d $PWD`
    sh autogen.sh
    ./configure --prefix=/usr
    make

    cd Po
    make DESTDIR=$sdir/Run install
    cd ..
}

package()
{
    cd "${srcdir}"
    cd "$_gitdir"

    rm -rf pkg
    mkdir pkg
    cp -rf Share pkg/
    mkdir pkg/usr
    mkdir pkg/usr/bin
    mv pkg/Share/schumix pkg/usr/bin/
    mv pkg/Share/schumix-server pkg/usr/bin/
    mv pkg/Share/share pkg/usr/
    mkdir pkg/usr/share/doc
    mkdir pkg/usr/share/doc/schumix
    cp License pkg/usr/share/doc/schumix/
    mkdir pkg/usr/lib
    mkdir pkg/usr/lib/pkgconfig
    mkdir pkg/usr/lib/schumix
    cp -rf Scripts pkg/usr/lib/schumix/Scripts
    cd Run/Release/Addons

    for file in *.pc
    do
        echo $file;
        mv $file ../../../pkg/usr/lib/pkgconfig/$file
    done

    cd ..

    for file in *.pc
    do
        echo $file;
        mv $file ../../pkg/usr/lib/pkgconfig/$file
    done

    rm Config.exe Installer.exe Addons/Schumix.db3 Addons/sqlite3.dll Addons/System.Data.SQLite.dll Addons/MySql.Data.dll
    rm Addons/Schumix.Irc.dll Addons/Schumix.Framework.dll Addons/NGettext.dll
    rm Addons/YamlDotNet.Core.dll Addons/YamlDotNet.RepresentationModel.dll schumix.config schumix.installer schumix schumix.server

    #for file in *.mdb
    #do
    #    rm $file
    #done

    cp -rf ./ ../../pkg/usr/lib/schumix
    cd ../../
    cp -rf ./Run/usr/lib/schumix/locale pkg/usr/share/locale
    cd pkg
    rm -rf Share
    cd ..
    cd ..
    cd ..
    cp -rf "${srcdir}"/"$_gitdir"/pkg/ ./
}
